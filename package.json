{
  "name": "lightswitch",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheBerriman/lightswitch-sketch.git"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "Lightswitch",
    "manifest": "src/manifest.json",
    "main": "Lightswitch.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  }
}
